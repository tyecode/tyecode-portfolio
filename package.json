{
  "name": "tyecode-portfolio",
  "description": "Modern front-end web developer portfolio built with React, TypeScript, and Tailwind CSS. Showcasing responsive web applications, UI/UX implementations, and front-end development expertise.",
  "author": {
    "name": "tyecode",
    "email": "sengphachanh.dev@gmail.com",
    "url": "https://github.com/tyecode/tyecode-portfolio.git"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tyecode/tyecode-portfolio"
  },
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "dev": "cross-env PORT=8000 node server",
    "prebuild": "node scripts/generate-static-files.js",
    "build": "pnpm run build:client && pnpm run build:server && pnpm run build:email",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "build:email": "vite build --ssr src/services/email.ts --outDir dist/server --emptyOutDir=false",
    "preview": "cross-env NODE_ENV=production PORT=8080 node server",
    "clean": "pnpm store prune && rm -rf node_modules/.cache && rm -rf dist",
    "cleanup": "node scripts/cleanup.js",
    "lint": "eslint .",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "pnpm run lint && pnpm run format:check",
    "fix": "pnpm run lint:fix && pnpm run format",
    "type-check": "tsc --noEmit",
    "test:analytics": "node scripts/test-analytics.js"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "compression": "^1.8.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "nodemailer": "^7.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet-async": "^2.0.5",
    "sirv": "^3.0.1",
    "tailwind-merge": "^3.3.1",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-sitemap": "^0.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.4",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "dedent": "^1.6.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "lighthouse": "^12.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.1.1"
  }
}
