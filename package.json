{
  "name": "tyecode-portfolio",
  "description": "Modern front-end web developer portfolio built with React, TypeScript, and Tailwind CSS. Showcasing responsive web applications, UI/UX implementations, and front-end development expertise.",
  "author": {
    "name": "tyecode",
    "email": "sengphachanh.dev@gmail.com",
    "url": "https://tyecode.github.io/tyecode-portfolio/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tyecode/tyecode-portfolio"
  },
  "homepage": "https://tyecode.github.io/tyecode-portfolio/",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "cross-env PORT=8000 node server",
    "build": "pnpm run build:client && pnpm run build:server && pnpm run build:email",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "build:email": "vite build --ssr src/services/email.ts --outDir dist/server --emptyOutDir=false",
    "build:static": "cross-env VITE_STATIC_BUILD=true vite build",
    "build:static:local": "vite build",
    "build:lighthouse": "vite build",
    "build:analyze": "vite build --mode analyze",
    "preview": "cross-env NODE_ENV=production PORT=8080 node server",
    "preview:static": "vite preview --port 8080 --base /tyecode-portfolio/",
    "preview:static:local": "vite preview --port 8080",
    "clean": "pnpm store prune && rm -rf node_modules/.cache && rm -rf dist",
    "lighthouse": "lighthouse http://localhost:8000 --output html --output-path ./lighthouse-dev-report.html --chrome-flags=\"--headless\"",
    "lighthouse:local": "lighthouse http://localhost:8080 --output html --output-path ./lighthouse-local-report.html --chrome-flags=\"--headless\"",
    "lighthouse:prod": "lighthouse https://tyecode.github.io/tyecode-portfolio/ --output html --output-path ./lighthouse-prod-report.html --chrome-flags=\"--headless\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:src": "prettier --write src/",
    "check": "pnpm run lint:check && pnpm run format:check",
    "fix": "pnpm run lint:fix && pnpm run format",
    "type-check": "tsc --noEmit",
    "test": "echo 'No tests specified' && exit 0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "clsx": "^2.1.1",
    "compression": "^1.8.0",
    "dotenv": "^16.5.0",
    "express": "^5.0.1",
    "nodemailer": "^7.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet-async": "^2.0.5",
    "sirv": "^3.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-sitemap": "^0.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.4",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "lighthouse": "^12.1.0",
    "prettier": "^3.5.3",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.1.1"
  }
}
