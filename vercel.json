{
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist/client",
  "installCommand": "pnpm install",
  "framework": "vite",

  "functions": {
    "api/contact.js": {
      "maxDuration": 10
    }
  },

  "rewrites": [
    {
      "source": "/api/contact",
      "destination": "/api/contact.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "PNPM_FLAGS": "--shamefully-hoist"
  }
}
