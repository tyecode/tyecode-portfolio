{
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist/client",
  "installCommand": "pnpm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server.js"
    },
    {
      "source": "/((?!images|robots\\.txt|sitemap\\.xml|_redirects|site\\.webmanifest|.*\\.(ico|png|jpg|jpeg|gif|svg|css|js|woff|woff2|ttf|eot)).*)",
      "destination": "/server.js"
    }
  ],
  "env": {
    "PNPM_FLAGS": "--shamefully-hoist"
  }
}
